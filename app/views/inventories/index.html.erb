<h1>Listing inventories</h1>

<table>
  <tr>
    <th>Ski</th>
    <th>Store</th>
    <th>URL</th>
    <th>Size Available</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @inventories.each do |inventory| %>
  <tr>
    <td><%= inventory.ski_id %></td>
    <td><%= inventory.store_id %></td>
    <td><%= inventory.product_url %></td>
    <td><%= inventory.size_available %></td>
    <td><%= inventory.price %></td>
    <td><%= link_to 'Show', inventory %></td>
    <td><%= link_to 'Edit', edit_inventory_path(inventory) %></td>
    <td><%= link_to 'Destroy', inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

