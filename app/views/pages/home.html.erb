					<% @all_mountain_top_skis[0..5].each_slice(3).with_index do |top_three_skis, index| %>
                        <div class="<% if index == 0 %>item active<% else %>item<% end %>">
                        	<ul class="thumbnails">
                            	<% top_three_skis.each do |top_ski| %>
                            	<li class="span1">
				            		<div class="thumbnail">
                            			<%= link_to(image_tag(top_ski.images.first.image_url, :class=>"ski-image"), "/skis/#{top_ski.id}") %>
                        				<h5 class="thumbnail-label"><%= top_ski.name %></h5>
      									<p class="thumbnail-label">
      										<% @price_array = [] %>
      											<% top_ski.inventories.each do |inventory| %>
      												<% @price_array << number_to_currency(inventory.price) %>
      											<% end %>
      											<% @price_array.compact.sort! {|x,y| x <=> y} %>
      											<%= @price_array.first %></p>
      									<p class="thumbnail-label">Shred Score: <%= top_ski.reviews.map(&:average_review).max %> pts</p>
                        			</div>
                        		</li>
                        		<% end %>
                        	</ul>	
                  		</div>
                        <% end %>		
				</div>
